@model AdminTEmplate.Models.ViewModel
@{
    ViewBag.Title = "AddUser";
}


@section AddUserStyle{
    <link type="text/css" href="~/Public/vendors/jasny-bootstrap/css/jasny-bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/iCheck/skins/minimal/blue.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/select2/css/select2.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/select2/css/select2-bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/bootstrapvalidator/dist/css/bootstrapValidator.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/sweetalert/dist/sweetalert2.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/css/custom_css/add_users.css" rel="stylesheet" />
}
<aside class="right-side right-padding">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!--section starts-->
        <h2>Add User</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">Users</a>
            </li>
            <li>
                <a href="add_users.html" class="activated">Add User</a>
            </li>
        </ol>
    </section>
    <!--section ends-->
    <div class="container-fluid">
        <!--main content-->
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-fw fa-user"></i> Add User
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("Add", "Users", FormMethod.Post, new { enctype = "multipart/form-data"}))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        @Html.Label("Username")
                                        @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Email")
                                        @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Phone")
                                        @Html.TextBoxFor(m => m.User.PhoneNumber, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Status")
                                        @Html.DropDownListFor(m => m.User.Status, new SelectList(Model.Status), ""
                                       , new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("City")
                                        @Html.TextBoxFor(m => m.User.City, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Gender")
                                        @Html.DropDownListFor(m => m.User.Gender, new SelectList(Model.Gender), ""
                                       , new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Country")
                                        @Html.DropDownListFor(m => m.User.Country, new SelectList( ViewBag.CountryList), ""
                                       , new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">

                                        @Html.EditorFor(m => m.Users.FirstOrDefault().Photo, new { htmlAttributes = new { type = "file" } })
                                        @Html.ValidationMessageFor(m => m.User.Photo, "", new { @class = "text-danger" })

                                    </div>
                                  
                                    <div class="form-group">
                                        @Html.Label("Adress")
                                        @Html.TextBoxFor(m => m.User.Adress, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Post Code")
                                        @Html.TextBoxFor(m => m.User.PinCode, new { @class = "form-control" })
                                    </div>


                                    @Html.HiddenFor(m => m.User.Id, new { @class = "form-control" })
                                    <button class="btn btn-success" type="submit">save</button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- col-md-6 -->
        <!--row -->
        <!--row ends-->
    </div>
    <!-- /.content -->
</aside>

@section AddUserJs{
    <script src="~/Public/vendors/jasny-bootstrap/js/jasny-bootstrap.js" type="text/javascript"></script>
    <script src="~/Public/vendors/iCheck/icheck.js" type="text/javascript"></script>
    <script src="~/Public/vendors/select2/js/select2.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js" type="text/javascript"></script>
    <script src="~/Public/vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
    <script src="~/Public/js/custom_js/add_users.js" type="text/javascript"></script>
}

