@model AdminTEmplate.Models.ViewModel
@{
    ViewBag.Title = "Index";
}

@section CoursesStyle{
    <link type="text/css" href="~/Public/vendors/summernote/summernote.css" rel="stylesheet" media="screen" />
    <link type="text/css" href="~/Public/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/iCheck/skins/minimal/green.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/bootstrapvalidator/dist/css/bootstrapValidator.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/sweetalert/dist/sweetalert2.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/js/css/custom_css/course_schedule.css" rel="stylesheet" />
}
<aside class="right-side right-padding">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!--section starts-->
        <h2>Course Schedule</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">Course Schedule</a>
            </li>
            <li>
                <a href="admin_courseschedule.html">Course Schedule</a>
            </li>
        </ol>
    </section>
    <!--section ends-->
    <div class="container-fluid">
        <!--main content-->
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-fw fa-file-text-o"></i> Add Course Schedule
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("Add", "Courses", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <div class="form-group">
                                            @Html.Label("Packages")
                                            @Html.DropDownListFor(m => m.Cours.PackId, new SelectList(Model.Packs, "Id", "Name"), ""
                                           , new { @class = "form-control" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Trainers")
                                        @Html.DropDownListFor(m => m.Cours.TrainerId, new SelectList(Model.Trainers, "Id", "Name"), ""
                                       , new { @class = "form-control" })
                                    </div>



                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Cours.StartTime)
                                        @Html.TextBoxFor(m => m.Cours.StartTime, new { @class = "form-control", placeholder = "06:00" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Cours.EndTime)
                                        @Html.TextBoxFor(m => m.Cours.EndTime, new { @class = "form-control", placeholder = "AS : 07:00" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Rooms")
                                        @Html.DropDownListFor(m => m.Cours.RoomId, new SelectList(Model.Rooms, "Id", "Name"), ""
                                       , new { @class = "form-control" })
                                    </div>
                                    @Html.HiddenFor(m => m.Cours.Id, new { @class = "form-control" })
                                    <button class="btn btn-success" type="submit">save</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-fw fa-user"></i> Course Schedule
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body table-responsive">
                        <div role="tabpanel">
                            <!-- Nav tabs -->
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="mon">
                                    <table class="table table-bordered table1">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Trainer</th>
                                                <th>Room</th>
                                                <th>From</th>
                                                <th>To</th>
                                                <th>Edit/Save</th>
                                                <th>Delete/Cancel</th>
                                                <th>Notifications</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Courses)
                                            {
                                                <tr>
                                                    <td>@item.Package.Name</td>
                                                    <td>@item.Trainer.Name</td>
                                                    <td>@item.Room.Name</td>
                                                    <td>@item.StartTime.Value.ToString("hh::mm")</td>
                                                    <td>@item.EndTime.Value.ToString("hh::mm")</td>
                                                    <td>
                                                        <a class="btn btn-primary " href="/Courses/Edit/@item.Id">
                                                           
                                                            <i class="fa fa-fw fa-edit"></i> Edit
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class=" btn btn-danger " href="/Courses/Delete/@item.Id">
                                                            <i class="fa fa-trash-o"></i> Delete
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning mar-bm notification-alert" href="javascript:;">
                                                            <i class="fa fa-fw fa-info-circle"></i> Notification
                                                        </a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- col-md-6 -->
        <!--row -->
        <!--row ends-->
    </div>
    <!-- /.content -->
</aside>

@section CoursesJS2{
   
    <script src="~/Public/vendors/moment/moment.js" type="text/javascript"></script>
    <script src="~/Public/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/summernote/summernote.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/iCheck/icheck.js" type="text/javascript"></script>
    <script src="~/Public/vendors/datatables/js/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Public/vendors/datatables/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Public/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js" type="text/javascript"></script>
    <script src="~/Public/vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
    <script src="~/Public/js/custom_js/course_schedule.js" type="text/javascript"></script>
}

